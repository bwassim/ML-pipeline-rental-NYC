name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: The input artifact taken by basic_cleaning corresponding to the dataset
        type: string

      output_artifact:
        description: The output artifact generated by basic_cleaning which is the cleaned dataset
        type: string

      output_type:
        description: The type of the output
        type: string
        default: "Pandas Dataframe"

      output_description:
        description: The output description
        type: string
        default: "The input dataset is preprocessed and cleaned"

      min_price:
        description: The minimal value of a price in the dataset
        type: float
        default: 10

      max_price:
        description: The maximal value of a price in the dataset
        type: float
        default: 350

    command: >-
      python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
